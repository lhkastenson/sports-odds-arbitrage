{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=odds.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    }
  },
  "OddsApi": {
    "ApiKey": "",
    "BaseUrl": "https://api.the-odds-api.com",
    "DefaultRegions": "us",
    "DefaultMarkets": "h2h,spreads,totals",
    "OddsFormat": "american",
    "DefaultSports": [
      "americanfootball_nfl",
      "basketball_nba",
      "icehockey_nhl",
      "baseball_mlb"
    ]
  },
  "Cache": {
    "OddsCacheDurationSeconds": 300,
    "SportsCacheDurationSeconds": 3600,
    "MaxConcurrentRefreshes": 3
  },
  "AllowedHosts": "*"
}
